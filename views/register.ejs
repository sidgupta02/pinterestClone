<% include ./partials/header.ejs %>
<div
  class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1618005198919-d3d4b5a92ead?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTF8fGFic3RyYWN0fGVufDB8fDB8fHww')] flex items-center justify-center"
>
  <div class="w-[25vw] px-20 py-10 rounded-[30px] bg-zinc-100">
    <h1
      class="text-2xl text-center text-zinc-700 font-semibold tracking-tighter capitalize leading-none"
    >
      Create your profile
    </h1>
    <form method="POST" action="/register">
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2 bg-white"
        type="text"
        name="name"
        placeholder="fullname"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2 bg-white"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2 bg-white"
        type="email"
        name="email"
        placeholder="email"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2 bg-white"
        type="number"
        name="contact"
        placeholder="contact"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2 bg-white"
        type="password"
        name="password"
        placeholder="password"
      />
      <input
        class="border-2 rounded-full mt-5 text-white w-full px-3 py-2 bg-red-600"
        type="submit"
        value="Create Account"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-5 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service and acknowledge
        you've read our Privacy Policy. Notice at collection.
      </p>
    </form>
    <p class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full">
      Already have an account? <a
        class=" text-sm font-semibold text-zinc-700 text-center w-full"
        href="/"
        >Login Now</a
      >
    </p>
  </div>
</div>
<% include ./partials/footer.ejs %>
