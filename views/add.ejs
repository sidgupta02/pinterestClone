<% include ./partials/header.ejs %>

  <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a new post</h1>
    <hr class="mt-5 opacity-10">
    <form class="mt-5" action="/createpost" method="post" enctype="multipart/form-data" >
      <input class="block w-1/3 px-3 py-3 border-2 rounded-md" type="file" name="postimage" >
      <input class="mt-2 block w-1/3 px-3 py-2 border-2 rounded-md" type="text" placeholder="Title" name="title" >
      <textarea class="mt-2 block h-60 w-1/3 px-3 py-2 border-2 rounded-md" type="text" placeholder="Description" name="description" ></textarea>
      <input class="mt-2 block w-1/3 px-3 py-2 rounded-md bg-red-700" type="submit" value="Create Post" >
    </form>
  </div>

<% include ./partials/footer.ejs %>